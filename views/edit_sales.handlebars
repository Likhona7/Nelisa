<h1 class="area">Edit Sales</h1>

<div class="card-block">
	<div class="row">
	    <div class="col-lg-3"></div>
	    <div class="col-lg-6">

<form action="/sales/update/{{data.id}}" method="POST">
	<div class="">
		<label for="">Products</label>
		<select class="" name="product_id">
			{{#products}}
				<option {{selected}} value="{{id}}">{{description}}</option>
			{{/products}}
		</select></div>
<div class="form-group">

		<label for="">Date &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
		<input class="date-picker" type="date" name="sale_date" value="{{data.sale_date}}">
</div>
<div class="field">
	<label for="price">Quantity</label>
	<input type="text" name="quantity" value="{{data.quantity}}"></div>
	<div class="field">
		<label for="price">Price</label>
		<input type="text" name="price" value="{{data.price}}"></div>
	<input type="submit">
</form>
