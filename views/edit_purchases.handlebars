
<h1 class="area">Edit Purchases</h1>
<form action="/purchases/update/{{data.id}}" method="POST">
	<div class="">
		<label for="">Purchases</label>
		<select class="" name="prod_id">
			{{#products}}
				<option {{selected}} value="{{id}}">{{description}}</option>
			{{/products}}
		</select></div>
		<div class="form-group">
				<label for="">Supplier</label>
				<input class="date-picker" type="text" name="supplier" value="{{data.supplier}}">
		</div>
<div class="form-group">
		<label for="">Date &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
		<input  type="date" name="purchase_date" value="{{data.purchase_date}}">
</div>
<div class="field">
	<label for="price">Quantity</label>
	<input type="text" name="quantity" value="{{data.quantity}}"></div>
	<div class="field">
		<label for="price">Cost</label>
		<input type="text" name="cost" value="{{data.cost}}"></div>
	<input type="submit">
</form>
